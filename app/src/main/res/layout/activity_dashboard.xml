<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="taskbook.tazahkahbar.com.taskbook2.Activities.MainActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_gravity="top"
        android:layout_weight="1"
        ></FrameLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_gravity="bottom"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:weightSum="3"
    android:id="@+id/footer">


    <LinearLayout
        android:id="@+id/footer_home_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/mainColor"
        android:layout_weight="0.95">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tab_home_ico"
            android:layout_gravity="center"
            android:padding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer_tick_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/mainColor"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="1dp"
        android:layout_weight="1.1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tab_tick_ico"
            android:layout_gravity="center"
            android:padding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer_bee_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/mainColor"
        android:layout_weight="0.95">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tab_bee_ico"
            android:layout_gravity="center"
            android:padding="10dp"/>

    </LinearLayout>

</LinearLayout>
</LinearLayout>
